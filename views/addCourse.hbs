<div class="container">
    <div class="row">
        <form action="/courses/course/create" method="POST">
            <div class="input-field col s6">
                <input placeholder="Placeholder" id="name" type="text" class="validate" name="name">
                <label for="name">Name</label>
            </div>
            <div class="input-field col s6">
                <input id="image" type="text" class="validate" name="image">
                <label for="image">Image</label>
            </div>

            <div class="col s12" style="text-align: end;">
                <button class="waves-effect waves-light btn" type="submit">Create category</button>

                <select name="categoryID" class="browser-default">
                    <option value="">Select Category</option>
                    {{#each categories}}
                    <option value="{{ _id }}">{{ name }}</option>
                    {{/each}}
                </select>
            </div>



        </form>
    </div>
</div>